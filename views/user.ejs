        <input type="email" name="email" placeholder="Your Email" value="<%= profile_user.email %>" required><br><br>
        <input id="imgInp" type="file" name="avatar" placeholder="Profile Picture" /><br><br>
        <input type="submit"  value="Update">
    </form>
    

   



