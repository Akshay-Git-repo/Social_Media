<link rel="stylesheet" href="/css/home.css">
<button text="join room" class="btn btn-primary btn-block" style="background:yellowgreen ;;" onclick="a();"> Join Room</button>

<div id="home-container">
    <section id="feed-posts">
            <h4>Posts</h4>
            <% if(locals.user){ %>
            <form action="/post/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
                <input type="submit" value="Post">
            </form>
            <% } %>
        
            <div id="posts-list-container">
                <ul style=" list-style-type:none;">
                    <% for(post of Posts){ %>
                        
                    <%- include('_post') -%>
                        
                    <%} %>
                </ul>
            </div>
        </section>
        
        
        <section id="user-friends">

            <section id="friends-list">

                <h4>Friends</h4>
                <% for(u of friends){%>
                    <p>
                <a ><%=u.to_user.name%></a>
                
                </p>
                <% } %>
                <% for(u of friends_requested){%>
                    <p>
                <a ><%=u.from_user.name%></a>
               
                </p>
                <% } %>
    
    
                
             </section>
            <h4>Users</h4>
            <% for(u of all_users){%>
                <p>
                    <!-- <a href="/users/profile/<%= u.id %>/<%=locals.user._id%>"><%= u.name %></a> -->
                    <a href="/users/profile/<%= u.id %>/<%=locals.user._id%>"><%= u.name %></a>
                </p>
            <% } %>
        </section>
</div>
<!-- importing this script for creating the comments -->
