<header>

  <div id="layout-header">
    <div>
        <h2 style="color: white; font-weight: bolder;">Codeial<i style="font-size: 0.4em; margin-left: 2px;">&nbsp;Social Media App</i></h2>
        
    </div>
    <div style="margin-top: 15px;">
                
        
        <ul id="header-nav" style="list-style-type:none;justify-content:flex-end;">
        <%if(locals.user){%> 
            
            <li style="margin-right:10px;"> 
            <a href="/users/friend_request/<%=locals.user.id%>"><i class="fas fa-user-friends"></i></a>
            <%if(locals.user.pendingRequest.length>0){%>
            <span class="badge badge-light" id="request-count-header"><%=locals.user.pendingRequest.length%></span>
            <%}%>
            </li>   
            <img src="<%= user.avatar%>" alt="<%=user.name%>" width="3%" height="20vh" style="background-color: lightslategray; border-radius: 50%;" ><br></br>
        <li> 
            
        <a href="/users/profile/<%= user.id %>/<%=locals.user._id%>"><%=user.name%></a>

        </li>
        
        <li>
        <a href="/users/sign-out">Sign Out</a>

        </li>

        <%}else{%>

        <li>
        <a href="/users/sign-in">Sign In</a>
        </li>

        <li>
        <a href="/users/sign-up">Sign Up</a>
        </li>

        <%}%>
        </ul>
    </div>
</div>
</header>
